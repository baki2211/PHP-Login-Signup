{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
<div class="container">
    <div class="center text-center mb-2">
        <a href="{{ path('app_home') }}"><img src="{{asset("img/logo.png")}}" alt="Your logo"></a>
    </div>
</div>
<div class="container">
    <div class="center">
        <div class="row row-cols-3">
            <div class="col"></div>
            <div class="col">
                <div class="center card logincard p-3 ">
            <div class="card-body p-3" >
                <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    <div class="row d-flex">     
    <button class=" btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    </div>
</form>
            </div>
        </div>
        <div class="d-block text-center">
            <p>-----------------New to the site?----------------</p>
            <a class="btn btn-light border shadow" href="{{ path('app_register') }}">Create your  account</a>
        </div>
        
    </div>
            <div class="col"></div>
        </div>
        
    </div>
</div>

{% endblock %}